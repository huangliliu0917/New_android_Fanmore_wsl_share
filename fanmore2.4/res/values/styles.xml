    <style name="Animation.Activity.Translucent.Style" parent="@android:style/Animation.Translucent">
       <!--  <item name="android:windowEnterAnimation">@anim/push_left_in</item>
        <item name="android:windowExitAnimation">@anim/push_left_out</item> -->
          <!--<item name="android:activityOpenEnterAnimation">@anim/push_left_in</item>-->
       <!--&lt;!&ndash;<item name="android:activityOpenExitAnimation">@anim/push_left_out</item>&ndash;&gt;-->
        <!--<item name="android:activityCloseEnterAnimation">@anim/push_right_in</item>-->
        <!--<item name="android:activityCloseExitAnimation">@anim/push_right_out</item>-->
    </style>

    <style name="AnimationActivity" mce_bogus="1" parent="@android:style/Animation.Activity">
        <item name="android:activityOpenEnterAnimation">@anim/push_left_in</item>
        <item name="android:activityOpenExitAnimation">@anim/push_left_out</item>
        <item name="android:activityCloseEnterAnimation">@anim/push_right_in</item>
        <item name="android:activityCloseExitAnimation">@anim/push_right_out</item>
    </style>

    <style name="AnimationPop">
        <item name="android:windowEnterAnimation">@anim/in_from_down</item>
        <item name="android:windowExitAnimation">@anim/out_to_down</item>
    </style>
    <style name="AnimationPopTopIn">
        <item name="android:windowEnterAnimation">@anim/in_from_top</item>
        <item name="android:windowExitAnimation">@anim/out_to_top</item>
    </style>

    <style name="AnimationPopTranslucent">
        <item name="android:windowEnterAnimation">@anim/in_alpha</item>
        <item name="android:windowExitAnimation">@anim/out_alpha_to_top</item>
    </style>

    <style name="Dialog" parent="android:style/Theme.Dialog">
        <item name="android:windowBackground">@drawable/home_dialog_bg</item>
        <item name="android:windowNoTitle">true</item>
        <item name="android:windowIsFloating">true</item>
    </style>

    <style name="PopDialog" parent="@android:style/Theme.Dialog">
        <item name="android:windowFrame">@null</item>
        <item name="android:windowIsFloating">true</item>
        <item name="android:windowIsTranslucent">false</item>
        <item name="android:windowNoTitle">true</item>
        <item name="android:background">#00000000</item>
        <item name="android:windowBackground">@null</item>
    </style>

    <style name="PopDialogTranslucent" parent="@android:style/Theme.Dialog">
        <item name="android:windowFrame">@null</item>
        <item name="android:windowIsFloating">true</item>
        <item name="android:windowIsTranslucent">false</item>
        <item name="android:windowNoTitle">true</item>
        <item name="android:backgroundDimEnabled">false</item>
        <item name="android:background">@android:color/transparent</item> <!-- 设置自定义布局的背景透明 -->
        <item name="android:windowBackground">@android:color/transparent</item> <!-- 设置window背景透明，也就是去边框 -->
    </style>

    <style name="BottomTabStyle">
        <item name="android:layout_height">50dp</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_weight">1</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:onClick">onClickBottomTab</item>
    </style>

    <style name="TitleStyle">
        <item name="android:layout_height">50dp</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:background">@drawable/actionbar_background</item>
    </style>

    <style name="EditTextStyle" parent="android:Theme.Light"> <!-- parent="android:Theme.Light"解决自定义style，光标变白问题 -->
