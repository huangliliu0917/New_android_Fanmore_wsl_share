<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:cy="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center_horizontal"
    android:orientation="vertical"
    tools:context=".AllScoreActivity" >

    <FrameLayout style="@style/TitleStyle" >

        <cy.com.morefan.view.CyButton
            android:id="@+id/btnBack"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:layout_marginLeft="5dp"
            android:background="@drawable/title_back_normal"
            android:contentDescription="@string/img"
            android:onClick="onClickButton" />

        <TextView
            android:id="@+id/txtTitle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:textColor="@color/white"
            android:textIsSelectable="false"
            android:textSize="18dp" />
    </FrameLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@drawable/ticket_bg"
        android:gravity="center_horizontal"
        android:orientation="vertical"
        android:padding="10dp" >

        <ImageView
            android:layout_width="270dp"
            android:layout_height="104dp"
            android:layout_marginTop="10dp"
            android:background="@drawable/ticket_bg_top" />

        <FrameLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" >

            <FrameLayout
                android:layout_marginTop="30dp"
                android:layout_width="match_parent"
                android:layout_height="170dp"
                android:background="@drawable/ticket_bg_mid_bk"
                android:padding="20dp" >

                <cy.com.morefan.view.MyView
                    android:id="@+id/myView"
                    android:layout_width="match_parent"
                    android:layout_height="128dp"
                    android:background="@drawable/ticket_bg_mid"
                    android:gravity="center"
                    android:textColor="@color/white"
                    android:textSize="35sp"
                    cy:height="128dp"
                    cy:width="260dp" />
            </FrameLayout>

            <ImageView
                android:id="@+id/imgResult"
                android:layout_width="200dp"
                android:layout_height="200dp"
                android:layout_gravity="center"
                android:background="@drawable/ticket_on" />
        </FrameLayout>

        <TextView
            android:layout_marginTop="20dp"
            android:id="@+id/btnNext"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/shape_gray"
            android:clickable="true"
            android:onClick="onClick"
            android:paddingBottom="10dp"
            android:paddingLeft="30dp"
            android:paddingRight="30dp"
            android:paddingTop="10dp"
            android:text="再刮一张"
            android:textColor="@color/white"
            android:textIsSelectable="false"
            android:textSize="16sp" />

        <TextView
            android:id="@+id/txtCount"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:clickable="true"
            android:onClick="onClick"
            android:text="你还有3张刮刮卡"
            android:textColor="@color/white"
            android:textIsSelectable="false" />
    </LinearLayout>

</LinearLayout>