<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:orientation="vertical"
    tools:context=".AllScoreActivity" >

    <FrameLayout
        android:id="@+id/layNormal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal" >

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:orientation="horizontal"
            android:paddingLeft="5dip" >

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:orientation="vertical" >

                <TextView
                    android:id="@+id/txtActive"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:singleLine="true"
                    android:text="activeMsg"
                    android:textAppearance="?android:attr/textAppearanceMedium"
                    android:textColor="@color/black" />

                <TextView
                    android:id="@+id/txtTime"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="left"
                    android:gravity="left"
                    android:text="time"
                    android:textAppearance="?android:attr/textAppearanceSmall"
                    android:textColor="@color/black" />
            </LinearLayout>

            <ImageView
                android:id="@+id/imgTag"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/redo" />
        </LinearLayout>

        <TextView
            android:id="@+id/txtCount"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="right"
            android:gravity="left"
            android:text="count"
            android:textAppearance="?android:attr/textAppearanceSmall"
            android:textColor="@color/black" />
    </FrameLayout>

    <LinearLayout
        android:id="@+id/layEx"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:background="#ffcccccc" >

        <TextView
            android:id="@+id/txtExtra"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="right"
            android:gravity="left"
            android:padding="10dp"
            android:text="extraMsg"
            android:textAppearance="?android:attr/textAppearanceSmall"
            android:textColor="@color/gray_my" />
    </LinearLayout>

</LinearLayout>