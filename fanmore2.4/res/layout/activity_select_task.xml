<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:fitsSystemWindows="true"
    android:clipToPadding="true"
    android:layout_height="match_parent"
    tools:context="cy.com.morefan.supervision.GroupActivity">

    <FrameLayout android:id="@+id/ff1" style="@style/TitleStyle" >

        <ImageView
            android:id="@+id/btnBack"
            android:background="@color/white"
            android:layout_width="wrap_content"

            android:layout_gravity="center_vertical"
            android:layout_marginLeft="10dp"
            android:text="返回"
            android:gravity="center"
            android:layout_height="25dp"
            android:textSize="15sp"
            android:onClick="onClickButton"
            android:textColor="@color/white"
            android:src="@drawable/arrow_left" />



        <TextView
            android:id="@+id/txtTitle"
            android:text="架构"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:textColor="@color/theme_back"
            android:textIsSelectable="false"
            android:textSize="18dp" />


    </FrameLayout>
    <ListView
        android:id="@+id/listview"
        android:layout_below="@+id/ff1"
        android:layout_width="match_parent"
        android:layout_height="match_parent"></ListView>
    <cy.com.morefan.view.EmptyView
        android:layout_below="@id/ff1"
        android:id="@+id/layEmpty"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:scaleType="center"
        android:src="@anim/anim_empty"
        android:visibility="gone" />

</RelativeLayout>