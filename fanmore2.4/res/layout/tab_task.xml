<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@color/white"
    android:orientation="vertical"
    tools:context=".AllScoreActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/white"
        android:orientation="vertical"
        android:padding="5dp"
        android:visibility="gone" >

        <LinearLayout
            android:visibility="gone"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal" >

            <TextView
                android:id="@+id/txtSend"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="center"
                android:text="转发奖励￥0.4"
                android:textColor="@color/gray4"
                android:textSize="12dp" >
            </TextView>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="center"
                android:text="好友点击外链"
                android:textColor="@color/gray4"
                android:textSize="12dp"
                android:visibility="gone" >
            </TextView>

            <TextView
                android:id="@+id/txtScan"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="center"
                android:text="好友浏览￥0.1/次"
                android:textColor="@color/gray4"
                android:textSize="12dp" >
            </TextView>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal" >

            <TextView
                android:id="@+id/txtLink"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="center"
                android:text="￥0.2/次            "
                android:textColor="@color/gray4"
                android:textSize="12dp"
                android:visibility="gone" >
            </TextView>
        </LinearLayout>
    </LinearLayout>
    
    <LinearLayout
        android:background="#EEEEEE"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <LinearLayout
            android:id="@+id/task_date_top"
            android:padding="8dp"
            android:layout_gravity="center_horizontal"
            android:orientation="horizontal"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">
            <TextView
                android:id="@+id/task_date_value"
                android:text=""
                android:textSize="14sp"
                android:textColor="#434343"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
            <ImageView
                android:id="@+id/task_date_corner"
                android:layout_marginLeft="8dp"
                android:paddingBottom="2dp"
                android:layout_gravity="bottom"
                android:src="@drawable/corner"
                android:layout_width="10dp"
                android:layout_height="10dp" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/task_date_select"
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <cy.com.morefan.view.loopview.LoopView
                android:layout_marginTop="0dp"
                android:id="@+id/loopView"
                android:layout_width="match_parent"
                android:layout_height="30dp"
                app:awv_textsize="14"
                app:awv_isLoop="false"
                app:awv_itemsVisibleCount="3"
                app:awv_lineSpace="1.6"
                app:awv_dividerTextColor="@color/date_bg"
                app:awv_centerTextColor="@color/date_color"
                android:paddingBottom="1dp"
                android:layout_marginBottom="3dp"
                />
            <View
                android:layout_marginTop="4dp"
                android:background="#D5D5D5"
                android:layout_width="match_parent"
                android:layout_height="1px" />
            <TextView
                android:padding="4dp"
                android:layout_gravity="center_horizontal"
                android:textColor="#A7A7A7"
                android:text="选择日期"
                android:textSize="14sp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />

        </LinearLayout>
        
    </LinearLayout>

    <LinearLayout
        android:visibility="visible"
        android:id="@+id/task_notice_container"
        android:orientation="vertical"
        android:paddingTop="10dp"
        android:paddingLeft="10dp"
        android:paddingRight="10dp"
        android:background="@drawable/style_notice_bg"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <!--<cy.com.morefan.view.SwitcherView-->
            <!--android:paddingTop="6dp"-->
            <!--android:paddingBottom="6dp"-->
            <!--android:paddingLeft="8dp"-->
            <!--android:paddingRight="8dp"-->
            <!--android:id="@+id/switcherView"-->
            <!--android:layout_width="match_parent"-->
            <!--android:layout_height="wrap_content"-->
            <!--android:background="@drawable/shape_notice_bg"-->
            <!--app:switcherRollingTime="4000"-->
            <!--app:switcherTextColor="@color/notice_color"-->
            <!--app:switcherTextSize="14sp"-->
           <!--/>-->
    </LinearLayout>

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#f8f8f8" >

        <cy.com.morefan.view.PullDownUpListView
            android:id="@+id/listView"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_gravity="center"
            android:footerDividersEnabled="false"
            android:divider="@null"
            android:dividerHeight="0dp"
            android:fadingEdge="none"
            android:background="#F8F8F8"
            android:paddingLeft="0dp"
            android:headerDividersEnabled="false"
             />

        <cy.com.morefan.view.EmptyView
            android:id="@+id/layEmpty"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:scaleType="center"
            android:src="@anim/anim_empty"
            android:visibility="gone" />


        <View
            android:visibility="gone"
            android:alpha="0.2"
            android:background="@color/black"
            android:id="@+id/layMast"
            android:layout_width="match_parent"
            android:layout_height="match_parent" />

    </FrameLayout>

    <!--
         <cy.com.morefan.view.NetImageListView
            android:id="@+id/viewBookList"
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:cacheColorHint="#00000000"
            android:divider="@drawable/list_line"
            android:fadingEdge="none"
            android:listSelector="#00000000"
            android:scrollbarThumbVertical="@drawable/scrollbar" />
    -->

</LinearLayout>