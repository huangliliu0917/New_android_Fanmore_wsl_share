<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/gray_list_bg"
    android:gravity="center_vertical"
    android:orientation="vertical"
    tools:context=".AllScoreActivity" >

    <FrameLayout
        android:paddingLeft="5dp"
        android:paddingRight="5dp"
        android:paddingTop="5dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" >

        <LinearLayout
            android:id="@+id/layNormal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/white"
            android:gravity="center_vertical"
            android:orientation="horizontal"
            android:paddingBottom="15dp"
            android:paddingLeft="10dp"
            android:paddingRight="10dp"
            android:paddingTop="15dp"
            android:tag="false"
            tools:context=".AllScoreActivity" >

            <TextView
                android:id="@+id/txtIndex"
                android:layout_width="30dp"
                android:layout_height="wrap_content"
                android:layout_marginRight="5dp"
                android:gravity="center"
                android:text="1"
                android:textColor="@color/gray_my" />

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:background="@drawable/line_gray_bg_h"
                android:textIsSelectable="false" />

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:layout_marginLeft="10dp"
                android:layout_weight="1"
                android:orientation="horizontal" >

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:orientation="vertical" >

                    <TextView
                        android:id="@+id/txtDes"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:singleLine="true"
                        android:text="123"
                        android:textAppearance="?android:attr/textAppearanceMedium"
                        android:textColor="@color/gray_my"
                        android:textIsSelectable="false"
                        android:textSize="14dp" />

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal" >

                        <TextView
                            android:id="@+id/txtTime"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="left"
                            android:gravity="left"
                            android:text="2013-12-05 15:30:00"
                            android:textAppearance="?android:attr/textAppearanceSmall"
                            android:textColor="@color/gray4"
                            android:textIsSelectable="false"
                            android:textSize="12dp" />

                        <LinearLayout
                            android:id="@+id/layFrom"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal"
                            android:visibility="gone" >

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginLeft="10dp"
                                android:text="来自:"
                                android:textAppearance="?android:attr/textAppearanceSmall"
                                android:textColor="@color/gray4"
                                android:textIsSelectable="false"
                                android:textSize="12dp" />

                            <ImageView
                                android:id="@+id/imgFrom"
                                android:layout_width="15dp"
                                android:layout_height="15dp"
                                android:background="@drawable/share_ico_weixin" />
                        </LinearLayout>
                    </LinearLayout>
                </LinearLayout>

                <ImageView
                    android:id="@+id/imgTag"
                    android:layout_width="10dp"
                    android:layout_height="10dp"
                    android:background="@drawable/red_point_bg"
                    android:visibility="gone" />
            </LinearLayout>

            <TextView
                android:id="@+id/txtStatus"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="right|center_vertical"
                android:gravity="left"
                android:text="已发放"
                android:textAppearance="?android:attr/textAppearanceSmall"
                android:textColor="@color/gray_my"
                android:textIsSelectable="false" />
        </LinearLayout>

        <ImageView
            android:id="@+id/imgStatusTag"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="-4dp"
            android:layout_marginTop="-4dp"
            android:background="@drawable/img_tag_partin_status_fail"
            android:visibility="gone" />
    </FrameLayout>

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/line_gray_bg_h"
        android:textIsSelectable="false" />

    <LinearLayout
        android:id="@+id/layEx"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:background="#ffff2929"
        android:visibility="gone" >

        <TextView
            android:id="@+id/txtExtra"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="right"
            android:gravity="left"
            android:padding="10dp"
            android:text="extraMsg"
            android:textAppearance="?android:attr/textAppearanceSmall"
            android:textColor="@color/white" />
    </LinearLayout>

    <TextView
        android:id="@+id/txtDate"
        android:visibility="gone"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="right"
        android:layout_marginBottom="3dp"
        android:layout_marginRight="10dp"
        android:layout_marginTop="3dp"
        android:text="date"
        android:textColor="@color/gray5"
        android:textIsSelectable="false"
        android:textSize="11dp" />

</LinearLayout>