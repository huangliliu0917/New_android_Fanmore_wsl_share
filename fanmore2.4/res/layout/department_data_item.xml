<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:paddingBottom="15dp"
    android:paddingTop="15dp"
    android:layout_height="match_parent">
    <ImageView
        android:id="@+id/company_data_item_icon"
        android:layout_width="50dp"
        android:background="@drawable/prentice_photo"
        android:layout_centerVertical="true"
        android:layout_marginLeft="10dp"
        android:layout_height="50dp"/>
    <ImageView
        android:layout_marginLeft="10dp"
        android:layout_centerVertical="true"
        android:id="@+id/imgPhotocircle"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:background="@drawable/photo_circle_white" />
    <TextView
        android:id="@+id/company_data_item_name"
        android:layout_width="wrap_content"
        android:layout_toRightOf="@id/company_data_item_icon"
        android:layout_marginLeft="5dp"
        android:singleLine="true"
        android:textSize="18sp"
        android:textColor="@color/black"
        android:layout_alignTop="@id/company_data_item_icon"
        android:layout_height="wrap_content"/>

    <TextView
        android:id="@+id/company_data_item_label1"
        android:text=""
        android:layout_below="@id/company_data_item_name"
        android:layout_alignLeft="@id/company_data_item_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>




</RelativeLayout>