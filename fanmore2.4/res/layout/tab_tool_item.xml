<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/white"
    android:gravity="center_vertical"
    android:orientation="horizontal"
    tools:context=".AllScoreActivity" >

    <ImageView
        android:id="@+id/img"
        android:layout_width="70dp"
        android:layout_height="70dp"
        android:layout_marginBottom="5dp"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:layout_marginTop="5dp"
        android:background="@drawable/tool_sendcount2" />

    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:gravity="center_vertical"
        android:orientation="vertical" >

        <TextView
            android:id="@+id/txtName"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="name"
            android:textColor="@color/black"
            android:textSize="14sp" />

        <TextView
            android:id="@+id/txtValue"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="exp"
            android:textColor="@color/black"
            android:textSize="14sp" />

        <TextView
            android:id="@+id/txtDes"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="2dp"
            android:text="desdesdesdesdesdesdesdesdesdesdesdesdesdesdesdes"
            android:singleLine="true"
            android:ellipsize="end"
            android:textColor="@color/gray_my"
            android:textSize="12sp" />
    </LinearLayout>

    <TextView
        android:id="@+id/btn"
        android:layout_width="77dp"
        android:layout_height="37dp"
        android:layout_marginRight="10dp"
        android:gravity="center"
        android:background="@drawable/shape_yellow_sel"
        android:text="购买"
        android:textColor="@color/white" />

</LinearLayout>