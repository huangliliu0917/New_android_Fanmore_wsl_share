<?xml version="1.0" encoding="utf-8"?>

<android.support.v7.widget.CardView android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    app:cardUseCompatPadding="true"
    app:cardBackgroundColor="#FDFDFD"
    app:cardPreventCornerOverlap="false"
    app:cardCornerRadius="5dp"
    app:contentPaddingLeft="5dp"
    app:contentPaddingRight="5dp"
    app:contentPaddingBottom="5dp"
    app:cardElevation="2dp">

<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:paddingTop="5dp"
    android:paddingLeft="2dp"
    android:paddingRight="2dp"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content">

    <ImageView
        android:id="@+id/left_menu_my"
        android:src="@drawable/style_menu_my_sel"
        android:layout_width="30dp"
        android:layout_height="30dp" />

    <ImageView
        android:id="@+id/left_menu_company"
        android:src="@drawable/style_menu_company_sel"
        android:layout_width="30dp"
        android:layout_height="30dp" />

    <ImageView
        android:id="@+id/left_menu_mall"
        android:src="@drawable/style_menu_mall_sel"
        android:layout_width="30dp"
        android:layout_height="30dp" />


</LinearLayout>

</android.support.v7.widget.CardView>