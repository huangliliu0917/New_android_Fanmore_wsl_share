<?xml version="1.0" encoding="utf-8"?>

<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    app:cardBackgroundColor="#FDFDFD"
    app:cardCornerRadius="5dp"
    app:cardElevation="10dp"
    app:contentPaddingBottom="5dp"
    app:contentPaddingLeft="0dp"
    app:contentPaddingRight="1dp">

    <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:paddingLeft="0dp"
        android:paddingRight="0dp"
        android:paddingTop="5dp">

        <ImageView
            android:id="@+id/left_menu_my"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:padding="8dp"
            android:src="@drawable/style_menu_my_sel" />

        <ImageView
            android:id="@+id/left_menu_company"
            android:padding="8dp"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_marginTop="5dp"
            android:src="@drawable/style_menu_company_sel" />

        <ImageView
            android:id="@+id/left_menu_mall"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_marginTop="5dp"
            android:padding="8dp"
            android:src="@drawable/style_menu_mall_sel" />


    </LinearLayout>

</android.support.v7.widget.CardView>