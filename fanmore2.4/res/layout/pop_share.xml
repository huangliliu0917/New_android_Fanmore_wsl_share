<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:background="@drawable/share_pop_bg"
    android:gravity="center"
    android:padding="10dp"
    android:id="@+id/layAll"
    android:orientation="horizontal" >
    <LinearLayout
        android:id="@+id/layWeiXin1"
        android:layout_width="90dp"
        android:layout_height="90dp"
        android:layout_weight="1"
        android:gravity="center"
        android:orientation="vertical" >

        <ImageView
            android:id="@+id/imgWeiXin1"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:background="@drawable/share_wechat" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="朋友"
            android:textColor="@color/gray4"
            android:textSize="16dp" />
    </LinearLayout>
    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="50dp"
        android:layout_marginTop="5dp"
        android:background="@drawable/line_gray_bg_h" />
    <LinearLayout
        android:id="@+id/layWeiXin"
        android:layout_width="90dp"
        android:layout_height="90dp"
        android:layout_weight="1"
        android:gravity="center"
        android:orientation="vertical" >

        <ImageView
            android:id="@+id/imgWeiXin"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:background="@drawable/share_ico_weixin" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="朋友圈"
            android:textColor="@color/gray4"
            android:textSize="16dp" />
    </LinearLayout>

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="50dp"
        android:layout_marginTop="5dp"
        android:background="@drawable/line_gray_bg_h" />

    <LinearLayout
        android:visibility="gone"
        android:id="@+id/layXinLang"
        android:layout_width="90dp"
        android:layout_height="90dp"
        android:layout_weight="1"
        android:gravity="center"
        android:orientation="vertical" >

        <ImageView
            android:id="@+id/imgSina"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/share_ico_sina" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="新浪微博"
            android:textColor="@color/gray4"
            android:textSize="16dp" />
    </LinearLayout>

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="50dp"
        android:layout_marginTop="7dp"
        android:background="@drawable/line_gray_bg_h" />

    <LinearLayout
        android:id="@+id/layQQ"
        android:layout_width="90dp"
        android:layout_height="90dp"
        android:layout_weight="1"
        android:gravity="center"
        android:orientation="vertical" >

        <ImageView
            android:id="@+id/imgQzone"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:background="@drawable/share_ico_qzone" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="QQ空间"
            android:textColor="@color/gray4"
            android:textSize="16dp" />
    </LinearLayout>

</LinearLayout>