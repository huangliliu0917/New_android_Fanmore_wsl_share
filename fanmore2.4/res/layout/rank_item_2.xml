<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout android:id="@+id/LaymyRank"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/gray_list_bg"
    android:gravity="center_vertical"
    android:padding="10dp"
    xmlns:android="http://schemas.android.com/apk/res/android">


    <ImageView
        android:layout_marginLeft="30dp"
        android:layout_toRightOf="@+id/imgIndex"
        android:id="@+id/myRanklogo"
        android:layout_width="60dp"
        android:layout_height="60dp"
        android:layout_gravity="center"
        android:contentDescription="@string/img" />




    <TextView
        android:layout_toRightOf="@+id/myRanklogo"
        android:id="@+id/myRankname"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text=""
        android:layout_marginLeft="10dp"
        android:textColor="@color/black"
        android:textSize="15sp" />


    <TextView
        android:layout_marginTop="10dp"
        android:id="@+id/myRankDes"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text=""
        android:textColor="@color/black"
        android:textSize="14sp"
        android:layout_below="@+id/myRankname"
        android:layout_alignLeft="@+id/myRankname"
        />
    <TextView
        android:id="@+id/myRankvalue"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text=""
        android:layout_centerVertical="true"
        android:layout_alignParentRight="true"
        android:layout_marginRight="10dp"
        android:textSize="14sp"/>
</RelativeLayout>