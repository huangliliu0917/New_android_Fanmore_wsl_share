<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/gray_list_bg"
    tools:context=".AllScoreActivity" >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        tools:context=".AllScoreActivity" >

        <LinearLayout
            android:id="@+id/lay"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="5dp"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:layout_marginTop="5dp"
            android:background="@color/white"
            android:orientation="vertical" >

            <!-- 任务描述 -->

            <include layout="@layout/include_task_des" />
            <!-- 返利描述 -->

            <LinearLayout
                android:id="@+id/layShopDes"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="2dp"
                android:baselineAligned="false"
                android:gravity="center_vertical"
                android:orientation="vertical" >

                <TextView
                    android:id="@+id/txtShopDes"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="5dp"
                    android:paddingLeft="45dp"
                    android:text="返利描述"
                    android:textColor="@color/gray4"
                    android:textIsSelectable="false"
                    android:textSize="12dp" />

                <ImageView
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:background="@drawable/line_gray_bg_h" />
            </LinearLayout>
            <!-- 返利描述end -->


            <!-- 积分情况 -->

            <LinearLayout
                android:id="@+id/layScore"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:baselineAligned="false"
                android:gravity="center"
                android:orientation="horizontal" >

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="3dp"
                    android:layout_weight="1"
                    android:gravity="center_vertical"
                    android:orientation="horizontal" >

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:paddingLeft="45dp"
                        android:text="总积分:"
                        android:textColor="@color/gray4"
                        android:textIsSelectable="false"
                        android:textSize="12dp" />

                    <TextView
                        android:id="@+id/txtTotalScore"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="5dp"
                        android:text="des"
                        android:textColor="@color/gray4"
                        android:textIsSelectable="false"
                        android:textSize="13dp" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:orientation="horizontal" >

                    <TextView
                        android:id="@+id/txtLastScoreDes"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="5dp"
                        android:text="剩余积分:"
                        android:textColor="@color/gray4"
                        android:textIsSelectable="false"
                        android:textSize="12dp" />

                    <TextView
                        android:id="@+id/txtLastScore"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="5dp"
                        android:text="des"
                        android:textColor="@color/gray4"
                        android:textIsSelectable="false"
                        android:textSize="13dp" />
                </LinearLayout>
            </LinearLayout>
            <!-- 积分情况end -->

            <ImageView
                android:id="@+id/imgLine"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/line_gray_bg_h" />

            <TextView
                android:id="@+id/txtOrderTime"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:padding="5dp"
                android:paddingLeft="10dp"
                android:text="正式上线时间"
                android:textColor="@color/gray4"
                android:textIsSelectable="false"
                android:textSize="12dp" />

            <ImageView
                android:id="@+id/imgLine2"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/line_gray_bg_h" />

            <TextView
                android:id="@+id/txtPreTime"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:padding="5dp"
                android:paddingLeft="10dp"
                android:text="可转发时间"
                android:textColor="@color/gray4"
                android:textIsSelectable="false"
                android:textSize="12dp" />
        </LinearLayout>
    </LinearLayout>

    <!-- 状态标记 -->

    <ImageView
        android:id="@+id/imgStatusTag"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="right"
        android:layout_marginRight="10dp"
        android:layout_marginTop="0dp"
        android:visibility="gone"
        android:background="@drawable/task_send_tag"
        android:contentDescription="@string/img" />
    <!-- 状态标记end -->


    <ImageView
        android:id="@+id/imgTagTop"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="6dp"
        android:layout_marginTop="2dp"
        android:background="@drawable/flag_top"
        android:contentDescription="@string/img"
        android:scaleType="fitXY" />

    <ImageView
        android:id="@+id/imgRight"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="right"
        android:layout_marginRight="10dp"
        android:layout_marginTop="10dp"
        android:background="@drawable/arrows_right"
        android:contentDescription="@string/img" />


    <!-- 设置闹钟 -->

    <TextView
        android:id="@+id/imgAlarm"
        android:layout_width="80dp"
        android:layout_height="30dp"
        android:layout_gravity="right"
        android:layout_marginRight="10dp"
        android:layout_marginTop="5dp"
        android:text="设置提示"
        android:gravity="center"
        android:textColor="@color/white"
        android:background="@drawable/shape_red_sel"
        android:contentDescription="@string/img" />
    <!-- 设置闹钟end -->
<ImageView
        android:id="@+id/imgOnline"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="6dp"
        android:layout_marginTop="2dp"
        android:background="@drawable/msg_tag_start"
        android:contentDescription="@string/img"
        android:scaleType="fitXY" />
</FrameLayout>