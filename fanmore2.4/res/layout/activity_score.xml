<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:background="#f8f8f8"
    android:fitsSystemWindows="true"
    android:clipToPadding="true"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="cy.com.morefan.ScoreActivity">

    <FrameLayout
        android:padding="10dp"
        android:background="@color/white"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <ImageView
            android:id="@+id/score_back"
            android:paddingRight="10dp"
            android:src="@drawable/arrow_left"
            android:layout_width="40dp"
            android:onClick="onClick"
            android:layout_height="28dp" />

        <TextView
            android:textColor="#EA9A28"
            android:textSize="20sp"
            android:text="我的积分"
            android:layout_gravity="center"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

    </FrameLayout>

    <LinearLayout
        android:layout_margin="20dp"
        android:background="@drawable/shape_white"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <LinearLayout
        android:layout_marginTop="20dp"
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <LinearLayout
            android:layout_width="0dp"
            android:layout_weight="1"
            android:gravity="center"
            android:orientation="vertical"
            android:layout_height="wrap_content">
            <TextView
                android:text="我的头条积分"
                android:textSize="16sp"
                android:textColor="#777777"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
            <TextView
                android:layout_marginTop="10dp"
                android:id="@+id/score_toutiao"
                android:text="0"
                android:textSize="14sp"
                android:textColor="#777777"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="0dp"
            android:layout_weight="1"
            android:orientation="vertical"
            android:gravity="center"
            android:layout_height="wrap_content">
            <TextView
                android:text="我的商城积分"
                android:textSize="16sp"
                android:textColor="#777777"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
            <TextView
                android:layout_marginTop="10dp"
                android:id="@+id/score_mall"
                android:text="0"
                android:textSize="14sp"
                android:textColor="#777777"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
        </LinearLayout>

    </LinearLayout>

        <LinearLayout
        android:orientation="horizontal"
        android:padding="10dp"
        android:gravity="center_vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <EditText
            android:background="@drawable/shape_gray_corner"
            android:id="@+id/score_toutiao_et"
            android:text="0"
            android:textColor="#777777"
            android:textSize="20sp"
            android:gravity="center"
            android:textStyle="bold"
            android:padding="8dp"
            android:inputType="number"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content" />
      <ImageView
          android:layout_marginLeft="10dp"
          android:layout_marginRight="10dp"
          android:src="@drawable/arrow3"
          android:layout_width="wrap_content"
          android:layout_height="wrap_content" />

        <EditText
            android:id="@+id/score_mall_et"
            android:text="0"
            android:background="@drawable/shape_gray_corner"
            android:gravity="center"
            android:textColor="#777777"
            android:inputType="number"
            android:textSize="20sp"
            android:padding="8dp"
            android:enabled="false"
            android:textStyle="bold"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content" />

    </LinearLayout>

    </LinearLayout>


    <TextView
        android:id="@+id/score_ok"
        android:onClick="onClick"
        android:gravity="center"
        android:background="@drawable/btn_blue_sel"
        android:textColor="@color/white"
        android:text="一键兑换"
        android:layout_gravity="center_horizontal"
        android:paddingLeft="20dp"
        android:paddingRight="20dp"
        android:paddingBottom="10dp"
        android:paddingTop="10dp"
        android:layout_marginTop="10dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />


</LinearLayout>
