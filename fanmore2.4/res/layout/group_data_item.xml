<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:layout_width="match_parent"
                android:paddingTop="10dp"
                android:paddingBottom="10dp"
              android:layout_height="match_parent">
    <ImageView
        android:id="@+id/group_data_item_icon"
        android:layout_width="50dp"
        android:background="@drawable/btn_red_sel"
        android:layout_marginLeft="10dp"
        android:layout_height="50dp"/>
    <TextView
        android:id="@+id/group_data_item_name"
        android:textSize="18sp"
        android:maxLines="1"
        android:layout_toLeftOf="@+id/group_data_item_count"
        android:layout_width="wrap_content"
        android:layout_marginLeft="10dp"
        android:layout_toRightOf="@id/group_data_item_icon"
        android:layout_height="wrap_content"/>
    <TextView
        android:id="@+id/txttb"
        android:text=""
        android:layout_below="@id/group_data_item_name"
        android:layout_alignLeft="@id/group_data_item_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>
    <TextView
        android:id="@+id/group_data_item_count"
        android:layout_alignParentRight="true"
        android:layout_marginRight="10dp"
        android:textSize="17sp"
        android:layout_centerVertical="true"
        android:textColor="@color/black"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>
</RelativeLayout>