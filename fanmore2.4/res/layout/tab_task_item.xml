<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/gray_list_bg"
    tools:context=".AllScoreActivity" >
    <TextView
        android:visibility="gone"
        android:id="@+id/txtDate"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_marginBottom="3dp"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="3dp"
        android:text="date"
        android:textColor="@color/black"
        android:textIsSelectable="false"
        android:textSize="11dp" />
    <LinearLayout
        android:layout_below="@+id/txtDate"
        android:id="@+id/lay"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="5dp"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:layout_marginTop="5dp"
        android:background="@color/white"
        android:orientation="vertical" >

        <!-- 任务描述 -->

        <include layout="@layout/include_task_des" />
        <!-- 返利描述 -->

        <TextView
            android:visibility="gone"
            android:id="@+id/txtShopDes"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="5dp"
            android:paddingLeft="45dp"
            android:text="返利描述"
            android:textColor="@color/gray4"
            android:textIsSelectable="false"
            android:textSize="12dp" />

        <ImageView
            android:id="@+id/imgLineShop"
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="@drawable/line_gray_bg_h" />
        <!-- 返利描述end -->


        <!-- 积分情况 -->

        <LinearLayout
            android:visibility="gone"
            android:id="@+id/layScore"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:baselineAligned="false"
            android:gravity="center"
            android:orientation="horizontal" >

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="0dp"
                android:layout_weight="1"
                android:gravity="center_vertical"
                android:orientation="horizontal" >

                <TextView
                    android:id="@+id/txtTotalScoreDes"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:paddingLeft="45dp"
                    android:text="总积分:"
                    android:textColor="@color/gray4"
                    android:textIsSelectable="false"
                    android:textSize="12dp" />

                <TextView
                    android:id="@+id/txtTotalScore"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="5dp"
                    android:text="des"
                    android:textColor="@color/gray4"
                    android:textIsSelectable="false"
                    android:textSize="12dp" />
            </LinearLayout>

            <LinearLayout
                android:id="@+id/layLast"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="center"
                android:orientation="horizontal" >

                <TextView
                    android:id="@+id/txtLastScoreDes"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="5dp"
                    android:text="剩余积分:"
                    android:textColor="@color/gray4"
                    android:textIsSelectable="false"
                    android:textSize="12dp" />

                <TextView
                    android:id="@+id/txtLastScore"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="5dp"
                    android:text="des"
                    android:textColor="@color/gray4"
                    android:textIsSelectable="false"
                    android:textSize="12dp" />
            </LinearLayout>
        </LinearLayout>
        <!-- 积分情况end -->

        <ImageView
            android:id="@+id/imgLine"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/line_gray_bg_h" />

        <LinearLayout
            android:visibility="gone"
            android:id="@+id/layMyIncome"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:orientation="horizontal" >

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="center"
                android:orientation="vertical"
                android:padding="5dp" >

                <TextView
                    android:id="@+id/txtMyScan"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="5dp"
                    android:text="0"
                    android:textColor="@color/red"
                    android:textIsSelectable="false"
                    android:textSize="13dp" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="5dp"
                    android:text="浏览总收益"
                    android:textColor="@color/gray4"
                    android:textIsSelectable="false"
                    android:textSize="12dp" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="center"
                android:orientation="vertical"
                android:padding="5dp" >

                <TextView
                    android:id="@+id/txtMySend"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="5dp"
                    android:text="0"
                    android:textColor="@color/red"
                    android:textIsSelectable="false"
                    android:textSize="13dp" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="5dp"
                    android:text="转发总收益"
                    android:textColor="@color/gray4"
                    android:textIsSelectable="false"
                    android:textSize="12dp" />
            </LinearLayout>
        </LinearLayout>

        <ImageView
            android:visibility="gone"
            android:id="@+id/imgLine2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/line_gray_bg_h" />

        <include layout="@layout/include_task_des_bottom" />
    </LinearLayout>



    <!-- 状态标记 -->

    <ImageView
        android:visibility="gone"
        android:id="@+id/imgStatusTag"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_marginRight="10dp"
        android:layout_marginTop="0dp"

        android:contentDescription="@string/img" />
    <!-- 状态标记end -->
>

    <ImageView
        android:visibility="gone"
        android:id="@+id/imgTagTop"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="6dp"
        android:layout_marginTop="2dp"
        android:contentDescription="@string/img"
        android:scaleType="fitXY" />

    <ImageView
        android:id="@+id/imgRight"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_marginRight="10dp"
        android:layout_marginTop="10dp"
        android:background="@drawable/arrows_right"
        android:contentDescription="@string/img" />

    <LinearLayout
        android:id="@+id/layAlpha"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:alpha="0.35"
        android:background="#999999"
        android:orientation="horizontal" />

</RelativeLayout>