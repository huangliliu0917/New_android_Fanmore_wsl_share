<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="cy.com.morefan.supervision.CompanyActivity">

    <FrameLayout android:id="@+id/ff1" style="@style/TitleStyle" >

        <cy.com.morefan.view.CyButton
            android:id="@+id/btnBack"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:layout_marginLeft="10dp"
            android:background="@drawable/title_back_normal"
            android:contentDescription="@string/img"
            android:onClick="onClick" />

        <TextView
            android:id="@+id/txtTitle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:textColor="@color/white"
            android:textIsSelectable="false"
            android:textSize="18dp" />

        <cy.com.morefan.view.CyButton
            android:id="@+id/btnQuery"
            android:paddingLeft="10dp"
            android:paddingRight="10dp"
            android:visibility="gone"
            android:layout_marginRight="10dp"
            android:background="@drawable/title_query_normal"
            android:layout_gravity="right|center_vertical"
            android:layout_width="wrap_content"
            android:onClick="onClick"
            android:layout_height="wrap_content"/>
    </FrameLayout>
    <LinearLayout
        android:id="@+id/productSwitch"
        android:layout_below="@+id/ff1"
        android:layout_width="fill_parent"
        android:layout_height="40dp"
        android:paddingLeft="5dp"
        android:paddingRight="5dp"
        android:padding="5dp"
        android:layout_marginTop="10dp"
        android:orientation="horizontal"
        android:background="@color/white">
        <RelativeLayout
            android:id="@+id/rqL"
            android:paddingLeft="5dp"
            android:paddingRight="5dp"
            android:paddingTop="5dp"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1">
            <RelativeLayout
                android:id="@+id/rqInnerL"
                android:layout_alignParentBottom="true"
                android:layout_centerHorizontal="true"
                android:layout_width="70dp"
                android:layout_height="35dp">
                <TextView
                    android:id="@+id/rqLabel"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerInParent="true"
                    android:text="默认"
                    android:layout_marginBottom="5dp"
                    android:textColor="@color/black"
                    android:textSize="14sp"/>
            </RelativeLayout>
        </RelativeLayout>
        <RelativeLayout
            android:id="@+id/zxL"
            android:paddingLeft="5dp"
            android:paddingRight="5dp"
            android:paddingTop="5dp"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1">
            <RelativeLayout
                android:id="@+id/zxInnerL"
                android:layout_alignParentBottom="true"
                android:layout_centerHorizontal="true"
                android:layout_width="70dp"
                android:layout_height="35dp">
                <TextView
                    android:id="@+id/zxLabel"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="转发"
                    android:layout_centerInParent="true"
                    android:layout_marginBottom="5dp"
                    android:textColor="@color/black"
                    android:textSize="14sp"/>
            </RelativeLayout>
        </RelativeLayout>
        <RelativeLayout
            android:id="@+id/jdL"
            android:paddingLeft="5dp"
            android:paddingRight="5dp"
            android:paddingTop="5dp"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1">
            <RelativeLayout
                android:id="@+id/jdInnerL"
                android:layout_alignParentBottom="true"
                android:layout_centerHorizontal="true"
                android:layout_width="70dp"
                android:layout_height="35dp">
                <TextView
                    android:id="@+id/jdLabel"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerInParent="true"
                    android:text="浏览"
                    android:layout_marginBottom="5dp"
                    android:textColor="@color/black"
                    android:textSize="14sp"/>
            </RelativeLayout>

        </RelativeLayout>
    </LinearLayout>
    <LinearLayout
        android:id="@+id/productsL"
        android:orientation="vertical"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:layout_below="@+id/productSwitch"
        android:background="@color/white" >
    </LinearLayout>

    <android.support.v4.view.ViewPager
        android:id="@+id/company_viewpager"
        android:layout_below="@id/productSwitch"
        android:layout_width="match_parent"
        android:layout_height="match_parent">


        <cy.com.morefan.view.EmptyView
            android:layout_below="@id/company_tab"
            android:id="@+id/layEmpty"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:scaleType="center"
            android:src="@anim/anim_empty"
            android:visibility="gone" />

    </android.support.v4.view.ViewPager>




</RelativeLayout>
