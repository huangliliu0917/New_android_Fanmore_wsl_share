<merge xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".AllScoreActivity" >

    <LinearLayout
        android:id="@+id/lay"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@drawable/loading"
        android:orientation="vertical"
        tools:context=".AllScoreActivity" />
    
    <TextView 
        android:layout_width="wrap_content"
        android:layout_height="50dp"
        android:layout_marginLeft="30dp"
        android:layout_marginRight="30dp"
        android:id="@+id/btn_wxlogin"
        android:background="@drawable/btn_loading"
        android:layout_gravity="center"/>

     <!--<cy.com.morefan.view.CyLoadingProgress-->
                <!--android:id="@+id/layProgress"-->
                <!--android:layout_width="match_parent"-->
                <!--android:layout_height="match_parent" >-->
            <!--</cy.com.morefan.view.CyLoadingProgress>-->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:layout_gravity="bottom"
        android:layout_marginBottom="6dp"
        android:orientation="vertical" >
      

        <TextView
            android:id="@+id/txtVersion"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
                android:text="V1.0.0 Beta"
            android:textSize="10sp"
            android:textColor="@color/white" />
         <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/version_tip"
            android:textSize="8sp"
            android:textColor="@color/white" />
    </LinearLayout>

</merge>