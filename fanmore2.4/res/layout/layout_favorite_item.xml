<?xml version="1.0" encoding="utf-8"?>
<com.mcxtzhang.swipemenulib.SwipeMenuLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/shape_white2"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <LinearLayout
        android:id="@+id/favorite_item_container"
        android:paddingTop="0dp"
        android:paddingLeft="10dp"
        android:paddingRight="10dp"
        android:paddingBottom="0dp"
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <com.facebook.drawee.view.SimpleDraweeView
        android:id="@+id/favorite_item_avator"
            android:layout_gravity="center_vertical"
        app:roundAsCircle="true"
        android:layout_width="40dp"
        android:layout_height="40dp"
            app:actualImageScaleType="fitCenter"
            app:failureImage="@drawable/user_icon"
            app:placeholderImage="@drawable/user_icon"/>

        <LinearLayout
            android:paddingTop="8dp"
            android:paddingBottom="8dp"
            android:layout_gravity="center_vertical"
            android:layout_marginLeft="10dp"
            android:orientation="vertical"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content">
            <TextView
            android:visibility="visible"
                android:text=""
            android:id="@+id/favorite_item_name"
            android:textColor="#888888"
                android:textSize="14sp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
            <TextView
            android:id="@+id/favorite_item_text"
            android:maxLines="1"
                android:singleLine="true"
                android:text=""
                android:textSize="16sp"
            android:ellipsize="end"
            android:layout_marginTop="5dp"
            android:textColor="#818181"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
    </LinearLayout>

        <View
            android:layout_marginLeft="8dp"
            android:layout_marginRight="8dp"
            android:background="#efefef"
            android:layout_gravity="center_vertical"
            android:layout_width="1dp"
            android:layout_height="match_parent"/>

        <TextView
            android:paddingLeft="10dp"
            android:textColor="#9a9a9a"
            android:layout_gravity="center_vertical"
            android:id="@+id/favorite_item_time"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

    </LinearLayout>

    <Button
        android:id="@+id/favorite_item_delete"
        android:text="删除"
        android:background="@drawable/shape_delete_bg"
        android:textColor="@color/white"
        android:layout_width="wrap_content"
        android:layout_height="match_parent" />

</com.mcxtzhang.swipemenulib.SwipeMenuLayout>