<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".AllScoreActivity" >

    <FrameLayout style="@style/TitleStyle" >
        <Button
            android:id="@+id/btnBack"
            android:visibility="gone"
            android:background="@color/theme_back"
            android:layout_width="wrap_content"
            android:layout_height="20dp"
            android:layout_gravity="center_vertical"
            android:layout_marginLeft="10dp"
            android:text="返回"
            android:onClick="onClick"
            android:gravity="center"
            android:textSize="15sp"
            android:textColor="@color/white"
            android:drawableLeft="@drawable/title_back_normal" />
        <ImageView
            android:id="@+id/btnLeft"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="left|center_vertical"
            android:layout_marginLeft="5dp"
            android:background="@drawable/title_left_menu"
            android:onClick="onClick" />


      <LinearLayout
            android:id="@+id/layTab"
            android:layout_width="match_parent"
            android:layout_height="30dp"
            android:layout_gravity="center"
            android:layout_marginLeft="95dp"
            android:layout_marginRight="95dp"
            android:orientation="horizontal"
          android:background="@color/theme_back">

            <TextView
                android:id="@+id/txtTask"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:clickable="true"
                android:gravity="center"
                android:onClick="onClick"
                android:text="乐享资讯"
                android:textSize="18sp"
                android:textColor="@color/white" />


        </LinearLayout>

        <LinearLayout
            android:id="@+id/layMiddle"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_gravity="center"
            android:gravity="center"
            android:orientation="horizontal"
            android:paddingLeft="10dp"
            android:paddingRight="10dp"
            android:visibility="gone" >

            <TextView
                android:id="@+id/txtTitle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/app_title_name"
                android:textColor="@color/white"
                android:textSize="18dp" />

            <ImageView
                android:id="@+id/imgTag"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="5dp"
                android:background="@drawable/title_middle_arrows" />
        </LinearLayout>

        <cy.com.morefan.view.CyButton
            android:visibility="visible"
            android:id="@+id/btnRight"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="right|center_vertical"
            android:layout_marginRight="10dp"
            android:background="@drawable/title_query_normal"
            android:clickable="true"
            android:onClick="onClick" />
          <TextView
            android:id="@+id/txtRight"
            android:layout_width="wrap_content"
            android:visibility="gone"
            android:text="分享"
            android:textColor="@color/white"
            android:layout_height="wrap_content"
            android:layout_gravity="right|center_vertical"
            android:layout_marginRight="10dp"
            android:clickable="true"
            android:onClick="onClick" />

        <TextView
            android:id="@+id/txtPrenticeCount"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="right"
            android:layout_marginRight="30dp"
            android:layout_marginTop="5dp"
            android:background="@drawable/count_bg"
            android:gravity="center"
            android:text="99"
            android:textColor="@color/white"
            android:textSize="9dp"
            android:visibility="gone" />
    </FrameLayout>

    <LinearLayout
        android:id="@+id/layContent"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:background="@color/white"
        android:orientation="vertical" />

</LinearLayout>